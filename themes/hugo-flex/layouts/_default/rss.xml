{{- define "main" -}}
{{- $pctx := . -}}
{{- if .IsHome -}}{{ $pctx = .Site }}{{- end -}}
{{- $pages := $pctx.RegularPages -}}
{{- if or ($pages) ($pctx.Pages) -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>Nostick</title>
    <link>https://nostick.fr/</link>
    <description>Actualités du jeu vidéo sur Nostick</description>
    <language>fr-FR</language>
    <managingEditor>contact@nostick.fr (Équipe Nostick)</managingEditor>
    <webMaster>contact@nostick.fr (Équipe Nostick)</webMaster>
    <copyright>© 2023 Nostick. Tous droits réservés.</copyright>
    {{ if not .Date.IsZero }}<lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>{{ end }}
    {{ with .OutputFormats.Get "RSS" }}
        {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{ end }}
    {{ range $pages }}
    <item>
      <title>{{ .Title }}</title>
      <link>https://nostick.fr{{ .Permalink }}</link>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
      <author>Équipe Nostick</author>
      <guid>https://nostick.fr{{ .Permalink }}</guid>
      <description>{{ .Summary | html }}</description>
    </item>
    {{ end }}
  </channel>
</rss>
{{- end -}}
{{- end -}}